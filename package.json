{
  "version": "5.1.3",
  "name": "react-atomic-molecule",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-atomic/react-atomic-molecule"
  },
  "description": "Atomic design in React (molecules)",
  "keywords": [
    "react-atomic",
    "react-atomic-ui"
  ],
  "author": "Hill <hill@kimo.com>",
  "license": "MIT",
  "dependencies": {
    "array.merge": "*",
    "call-func": "*",
    "class-lib": "*",
    "create-el": "*",
    "css-query-selector": "*",
    "get-object-value": "*",
    "hyphenate-style-name": "*",
    "need-css": "*",
    "react-atomic-atom": "*",
    "reshow-build": "*",
    "reshow-constant": "*",
    "reshow-runtime": "*",
    "ucfirst-js": "*",
    "win-doc": "*"
  },
  "devDependencies": {
    "react": "^18.x",
    "react-dom": "^18.x",
    "reshow-unit": "*"
  },
  "exports": {
    "require": "./build/cjs/src/index.js",
    "import": "./build/es/src/index.mjs"
  },
  "main": "./build/cjs/src/index.js",
  "module": "./build/es/src/index.mjs",
  "scripts": {
    "format": "prettier-eslint --write 'src/**/*.js' 'ui/**/*.js*'",
    "clean": "find ./build -name '*.*' | xargs rm -rf",
    "build:cjs": "BABEL_ENV=cjs babel src -d build/cjs/src --ignore /**/__tests__",
    "build:es": "BABEL_ENV=es babel src -d build/es/src --out-file-extension .mjs",
    "build:type": "npx -p typescript tsc src/index.js src/**/*.js src/ui/**/*.jsx --jsx react-jsx --declaration --allowJs --emitDeclarationOnly --skipLibCheck --declarationDir types",
    "build": "npm run clean && npm run build:cjs && npm run build:es && npm run build:type",
    "mochaFor": "mocha -r global-jsdom/register",
    "mocha": "npm run mochaFor -- 'build/es/**/__tests__/*.mjs'",
    "test": "npm run build && npm run mocha",
    "prepublishOnly": "npm run format && npm run test"
  },
  "types": "./types/index.d.ts",
  "files": [
    "types",
    "build",
    "package.json",
    "README.md"
  ]
}
